<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/famous_title_color" />
            <padding
                android:bottom="@dimen/_5sdp"
                android:left="@dimen/_5sdp"
                android:right="@dimen/_5sdp"
                android:top="@dimen/_5sdp" />
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_8sdp" />
            <solid android:color="@color/famous_title_color" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/famous_main_color"/>
        </shape>
    </item>
</layer-list>