<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#117EC0</item>
        <item name="colorPrimaryVariant">#1CC7BB</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/labs_main_color</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>


    <style name="SplashIntroTheme" parent="AppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Material.Light.Dialog.NoMinWidth" parent="android:Theme.Material.Light.Dialog">
        <item name="android:windowMinWidthMinor">0dp</item>
        <item name="android:windowMinWidthMajor">0dp</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowTitleStyle">@null</item>
    </style>

    <!-- RadioButton style -->
    <style name="RadioButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/cart_details_color</item>
        <item name="colorControlActivated">@color/home_main_color</item>
    </style>


</resources>